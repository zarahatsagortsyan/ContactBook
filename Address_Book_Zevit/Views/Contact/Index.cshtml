@model IEnumerable<Contact>
<div> Contacts</div>
<div class="container">
    <table class="table table-condensed table-bordered table-striped table-sm table-responsive-sm  ">
        <thead class="bg-dark text-light">
            <tr>
                <td>Id</td>
                <td>Full Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Physical Address</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td>No Data</td></tr>
            }
            else
            {
                foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.id</td>
                        <td>@contact.FullName</td>
                        <td>@contact.Email</td>
                        <td>@contact.PhoneNumber</td>
                        <td>@contact.PhysicalAddress</td>
                        <td class="w-auto">
                            <a style="border:none;" asp-action="ViewSingleContact" asp-route-id="@contact.id"
                               class="btn btn-success">Details</a>
                            <a style="border:none;" asp-action="DeleteContact" asp-route-id="@contact.id"
                               class="btn btn-danger">Delete</a>
                            <a style="background-color:darkslategray;color:white;border:none;"
                               asp-action="EditContact" asp-route-id="@contact.id" class="btn btn-primary">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div style="display:flex " class="justify-content-end">
    <a class="btn btn-outline-dark" asp-action="AddContact" asp-controller="Contact">Add</a>
</div>