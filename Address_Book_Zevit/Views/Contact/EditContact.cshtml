@model Contact

<div>Edit contact</div>

<div>
    <form action="EditContact" method="post">
        <div class=" form-group">
            <label>Id</label>
            <input type="text" asp-for="id" class=" form-control" readonly="readonly" />
        </div>
        <div class=" form-group">
            <label>Full Name</label>
            <input type="text" asp-for="FullName" class=" form-control" />
        </div>
        <div class=" form-group">
            <label>Email</label>
            <input type="text" asp-for="Email" class=" form-control" />
        </div>
        <div class=" form-group">
            <label>Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class=" form-control" />
        </div>
        <div class=" form-group">
            <label>Physical Address</label>
            <input type="text" asp-for="PhysicalAddress" class=" form-control" />
        </div>
        <button type="submit" class="btn btn-dark">Edit</button>
    </form>

    <div class="d-flex justify-content-end">
        <form method="post" asp-action="DeleteContact" asp-route-id="@Model.id">
            <button type="submit" class="btn btn-danger"> Delete</button>
        </form>

        <a asp-action="ViewSingleContact"  asp-route-id="@Model.id" class="btn btn-success">Details</a>
        <a asp-action="Index" class="btn btn-default">Cancel</a>

    </div>
   

</div>