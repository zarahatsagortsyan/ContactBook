@model Contact

<div>Add Contact</div>
<div asp-validation-summary="All" class="text-danger"></div>
<form action="AddContact" method="post">
    <div class=" form-group">
        <label>Full Name *</label>
        <input type="text" asp-for="FullName" class=" form-control" required />
    </div>
    <div class=" form-group">
        <label>Email *</label>
        <input type="email" asp-for="Email" class=" form-control" required />
    </div>
    <div class=" form-group">
        <label>Phone Number *</label>
        <input type="text" asp-for="PhoneNumber" class=" form-control" required />
    </div>
    <div class=" form-group">
        <label>Physical Address </label>
        <input type="text" asp-for="PhysicalAddress" class=" form-control" />
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Contact">Add</button>
    <a asp-action="Index" class=" btn btn-default">Cancel</a>
</form>