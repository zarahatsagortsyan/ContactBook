@model Contact

<div>Delete contact</div>

<div>
    <form action="DeleteContact" method="post">
        <div class=" form-group">
            <label>Id</label>
            <input type="text" asp-for="id" class=" form-control" readonly="readonly" />
        </div>
        <div class=" form-group">
            <label>Full Name</label>
            <input type="text" asp-for="FullName" class=" form-control" readonly="readonly" />
        </div>
        <div class=" form-group">
            <label>Email</label>
            <input type="text" asp-for="Email" class=" form-control" readonly="readonly" />
        </div>
        <div class=" form-group">
            <label>Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class=" form-control" readonly="readonly" />
        </div>
        <div class=" form-group">
            <label>Physical Address</label>
            <input type="text" asp-for="PhysicalAddress" class=" form-control" readonly="readonly" />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <div class="d-flex justify-content-end">
        <a style="background-color:darkslategray;color:white;border:none; "
           asp-action="EditContact" asp-route-id="@Model.id" class="btn btn-primary">
            Edit
        </a>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
        <a asp-action="ViewSingleContact" asp-route-id="@Model.id" class="btn btn-success">Details</a>

    </div>
</div>
